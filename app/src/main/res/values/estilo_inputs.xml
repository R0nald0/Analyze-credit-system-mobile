<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/myGreen</item>
        <item name="cornerRadius">50dp</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="TextStyleInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
          <item name="android:layout_marginTop">5dp</item>
          <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ImagemRounded"  >
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImagemNotice"  >
        <item name="cornerSize">20%</item>
    </style>

    <style name="TexvAppStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_primary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextSecundary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_secundary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomEditStyle" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
         <item name="android:textColorLink">@color/black</item>
         <item name="android:textStyle">normal</item>
        <item name="textOutlineColor">@color/black</item>
    </style>

</resources>